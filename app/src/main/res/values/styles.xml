<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="TextInputField" parent="TextAppearance.AppCompat">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textColor">@color/black_900</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/material_button_height</item>
    </style>


    <!-- InputFieldView-->
    <style name="InputFieldView">
        <item name="border_error">@drawable/border_error</item>
        <item name="border_focus">@drawable/border_focused</item>
        <item name="border_inactive">@drawable/border_inactive</item>
        <item name="border_success">@drawable/border_success</item>
        <item name="color_error">@color/error</item>
        <item name="color_focused">@color/primary</item>
        <item name="color_inactive">@color/grey_800</item>
        <item name="color_success">@color/success</item>
        <item name="text_color">@color/black_900</item>
    </style>


    <dimen name="material_button_height">56dp</dimen>
</resources>
